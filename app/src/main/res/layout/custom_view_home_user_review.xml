<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="10dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="20dp"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    app:cardCornerRadius="0dp"
    app:cardElevation="15dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <in.co.halexo.angry.righttobeauty.custom_textview.sCustomTextViewRaleway
            android:id="@+id/home_user_review_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:paddingStart="10dp"
            android:scrollbars="vertical"
            android:text="@string/user_reviews"
            android:textAlignment="viewStart"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/home_user_review_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:paddingLeft="10dp"
            android:gravity="start" />

        <in.co.halexo.angry.righttobeauty.custom_textview.sCustomTextViewRaleway
            android:id="@+id/home_user_review_dash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:scrollbars="vertical"
            android:text="@string/dash"
            android:textAlignment="viewStart"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/home_user_review_name"
            app:layout_constraintEnd_toStartOf="@+id/home_user_review_name"
            android:paddingLeft="5dp"
            android:gravity="start" />

        <in.co.halexo.angry.righttobeauty.custom_textview.sCustomTextViewRaleway
            android:id="@+id/home_user_review_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:paddingStart="5dp"
            android:scrollbars="vertical"
            android:text="@string/user_reviews"
            android:textAlignment="viewStart"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_user_review_text"
            android:paddingLeft="5dp"
            android:gravity="start" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>